---
layout: layouts/base.njk
---

<main class="p-8 grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3">
  {% for post in collections.post | reverse %}
    <div class="rounded overflow-hidden shadow-lg">
      <div class="flex flex-col">
        <div class="hidden md:block w-full px-6 py-4">
          <img class="w-full rounded-lg" src="https://picsum.photos/400/300" alt="Imagen de la noticia">
        </div>
        <div class="w-full px-6 py-4">
          <div class="font-bold text-xl mb-2"><a href="{{ post.url | url }}">{{ post.data.title }}</a></div>
          <p class="text-gray-700 text-base">{{ post.date | readableDate }}</p>
          <div class="mt-8 flex">
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">Etiqueta</span>
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">Etiqueta</span>
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700">Etiqueta</span>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</main>
